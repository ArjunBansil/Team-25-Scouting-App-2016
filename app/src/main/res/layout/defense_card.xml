<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    card-view:cardUseCompatPadding="true"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    card-view:cardBackgroundColor="#fff"
    android:layout_width="300dp" android:layout_height="350dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/defense_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_not_interested_black_24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000"
            android:id="@+id/breachCount"
            android:layout_below="@+id/defense_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:background="@color/greyedOut"
            android:id="@+id/incBCount"
            android:layout_marginTop="265dp"
            android:layout_toEndOf="@+id/breachCount"
            android:layout_marginStart="30dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:background="@color/greyedOut"
            android:id="@+id/decBCount"
            android:layout_alignBottom="@+id/incBCount"
            android:layout_toEndOf="@+id/incBCount"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="B. Rating"
            android:id="@+id/ratingTitle"
            android:layout_marginStart="16dp"
            android:layout_alignBaseline="@+id/decBCount"
            android:layout_alignBottom="@+id/decBCount"
            android:layout_toEndOf="@+id/decBCount" />

        <Spinner
            android:layout_width="40dp"
            android:id="@+id/b_rating"
            android:layout_height="27dp"
            android:background="@color/greyedOut"
            android:popupBackground="@color/greyedOut"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            android:layout_alignBottom="@+id/ratingTitle"
            android:layout_toEndOf="@+id/ratingTitle">

        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/def_title"
            android:layout_above="@+id/decBCount"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>